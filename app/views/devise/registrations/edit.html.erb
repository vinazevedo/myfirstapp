<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Editar <%= resource_name.to_s.humanize %></h1>
  </div>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= devise_error_messages! %>

<div class="panel-body">

  <div class="form-group">
    <%= f.label :name, "Nome" %>
    <%= f.text_field :name, autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, class: "form-control" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>
      Currently waiting confirmation for: <%= resource.unconfirmed_email %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :password, "Senha" %> <i>(deixe em branco caso não deseje alterá-la)</i>
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, "Confirmação de senha" %> <i>(deixe em branco caso não deseje alterá-la)</i><br />
    <%= f.password_field :password_confirmation, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Senha atual" %>
    <%= f.password_field :current_password, class: "form-control" %>
  </div>

  <div><%= f.submit "Salvar alterações", class: "btn btn-primary" %></div>

</div>

<% end %>

<div class="panel-footer">
  <h3>Unhappy?</h3>
  
</br>

  <div>
    <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete, class: "btn btn-default" %>
  </div>

</br>

  <%= link_to "Back", :back %>
</div>
